    <!-- Form View -->
    <record id="blood_connect_request_form_view" model="ir.ui.view">
        <field name="name">Blood Connect Request Form View</field>
        <field name="model">blood.request</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <group>
                        <field name="request_by"/>
                        <!-- <field name="name"/> -->
                        <field name="patient_name" attrs="{'invisible':[('request_by','in',['hospital'])],'required':[('request_by','in',['patient'])]}"/>
                        <field name="hospital_name" attrs="{'invisible':[('request_by','in',['patient'])],'required':[('request_by','in',['hospital'])]}"/>
                        <!-- <field name="address"/> -->
                        <!-- <field name="city"/> -->
                        <!-- <field name="select_state" string="State"/> -->
                        <field name="requested_from"/>
                        <field name="blood_group"/>
                        <field name="quantity"/>
                        <!-- <field name="hospital" domain="[('state','=',select_state)]"/> -->
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action Menu -->
    <record id="blood_connect_request_action" model="ir.actions.act_window">
        <field name="name">Blood Requests</field>
        <field name="res_model">blood.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There is no new blood request!!
            </p>
        </field>
    </record>
</odoo>