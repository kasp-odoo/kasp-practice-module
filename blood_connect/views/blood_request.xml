<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List/Tree View -->
    <record id="blood_connect_request_tree_view" model="ir.ui.view">
        <field name="name">Blood Connect Request Tree View</field>
        <field name="model">blood.request</field>
        <field name="arch" type="xml">
            <tree string="tree_view">
                <field name="name"/>
                <field name="address"/>
                <field name="request_by"/>
                <field name="blood_group"/>
                <field name="quantity"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="blood_connect_request_form_view" model="ir.ui.view">
        <field name="name">Blood Connect Request Form View</field>
        <field name="model">blood.request</field>
        <field name="arch" type="xml">
            <form string="form_view">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <group>
                        <field name="request_by"/>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="blood_group"/>
                        <field name="quantity"/>
                        <field name="date"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action Menu -->
    <record id="blood_connect_request_action" model="ir.actions.act_window">
        <field name="name">Requests</field>
        <field name="res_model">blood.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There is no new blood request!!
            </p>
        </field>
    </record>
</odoo>